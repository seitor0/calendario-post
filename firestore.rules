rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function userPath() {
      return /databases/$(database)/documents/users/$(request.auth.uid);
    }

    function userExists() {
      return signedIn() && exists(userPath());
    }

    function userDoc() {
      return get(userPath());
    }

    function isAdmin() {
      return userExists()
        && userDoc().data.roles != null
        && userDoc().data.roles.admin == true;
    }

    function isAllowedClient(clientId) {
      return userExists()
        && userDoc().data.allowedClients != null
        && userDoc().data.allowedClients.hasAny([clientId]);
    }

    // =====================
    // USERS
    // =====================
    match /users/{uid} {
      allow get: if signedIn() && (request.auth.uid == uid || isAdmin());
      allow list: if isAdmin();

      allow create: if signedIn() && request.auth.uid == uid;

      // Users can update their own profile but cannot change roles/allowedClients.
      allow update: if signedIn() && (
        isAdmin() || (
          request.auth.uid == uid
          && request.resource.data.roles == resource.data.roles
          && request.resource.data.allowedClients == resource.data.allowedClients
        )
      );

      allow delete: if isAdmin();

      match /reads/{threadId} {
        allow read, write: if signedIn() && request.auth.uid == uid;
      }

      match /daySeen/{dateKey} {
        allow read, write: if signedIn() && request.auth.uid == uid;
      }
    }

    // =====================
    // CLIENTS (top-level)
    // =====================
    match /clients/{clientId} {
      allow get: if isAdmin() || isAllowedClient(clientId);
      allow list: if isAdmin();

      // Only admin can create/update/delete clients by default.
      allow create, update, delete: if isAdmin();
      // If you want members to update the client doc (e.g. logo), use:
      // allow update: if isAdmin() || isAllowedClient(clientId);

      // =====================
      // SUBCOLLECTIONS
      // =====================
      match /posts/{postId} {
        allow read: if isAdmin() || isAllowedClient(clientId);
        allow create, update, delete: if isAdmin() || isAllowedClient(clientId);
      }

      match /events/{eventId} {
        allow read: if isAdmin() || isAllowedClient(clientId);
        allow create, update, delete: if isAdmin() || isAllowedClient(clientId);
      }

      match /paids/{paidId} {
        allow read: if isAdmin() || isAllowedClient(clientId);
        allow create, update, delete: if isAdmin() || isAllowedClient(clientId);
      }

      match /chats/{chatId} {
        allow read: if isAdmin() || isAllowedClient(clientId);
        allow write: if false;

        match /messages/{messageId} {
          allow read: if isAdmin() || isAllowedClient(clientId);
          allow create: if isAdmin() || isAllowedClient(clientId);
          allow update, delete: if isAdmin();
        }
      }
    }
  }
}
